@inherits LoadingComponent

@if (Loading)
{
    <p>Loading...</p>
}
else
{
    <div class="left">
        <a class="profile">
            <div class="profile-photo">
                <img src="images/photo.jpg">
            </div>
            <div class="handle">
                <h4>@_profile.FirstName @_profile.LastName</h4>
                <p class="text-muted">@@@_profile.Username</p>
            </div>
        </a>
        <div class="sidebar">
            <a class="menu-item active">
                <span><img src="images/home-alt-2-regular-24.png"></span><h3>Home</h3>
            </a>

            <a class="menu-item">
                <span><img src="images/bell-regular-24.png"></span><h3>Notification</h3>
            </a>

            <a class="menu-item">
                <span><img src="images/user-regular-24.png"></span><h3>Friends</h3>
            </a>

            <a class="menu-item">
                <span><img src="images/envelope-regular-24.png"></span><h3>Message</h3>
            </a>

            <a class="menu-item">
                <span><img src="images/cog-regular-24.png"></span><h3>Settings</h3>
            </a>
        </div>
        <div class="public-post-btn">
            <button class="btn white-btn" id="publicBtn" onclick="@Logout">Logout</button>
        </div>
    </div>
}