<div class="write-post-container">
    <div class="user-profile">
        <img src="@ImageService.GetImageUrl(Profile.UserId, Profile.ProfilePicture)" alt="userPhoto" class="sidebar__image">
        <div>
            <p>@Profile.FirstName @Profile.LastName</p>
            <small>Public</small>
        </div>
    </div>

    <div class="post-input-container">
        <textarea rows="3" placeholder="What's on your mind, @Profile.FirstName @Profile.LastName?" @bind="_createPostRequest.Content"></textarea>
        <div class="button-container">
            <div class="add-post-links">
                <a href="#"><img src="images/image-add-regular-24.png"> Photo</a>
            </div>
            <div class="public-post-btn">
                <button class="btn white-btn" id="publicBtn" @onclick="async () => await Create()">Public</button>
            </div>
        </div>
    </div>
</div>