@page "/posts"
@inherits SocialApp.Client.Components.Base.LoadingComponent

@using Microsoft.AspNetCore.Authorization
@using SocialApp.Client.Components.Post
@attribute [Authorize]

<div class="main-content">
    <div class="left">
        <a class="profile">
            <div class="profile-photo">
                <img src="images/photo.jpg">
            </div>
            <div class="handle">
                <h4>Pcholin</h4>
                <p class="text-muted">@@pcholin</p>
            </div>
        </a>
        <div class="sidebar">
            <a class="menu-item active">
                <span><img src="images/home-alt-2-regular-24.png"></span><h3>Home</h3>
            </a>

            <a class="menu-item">
                <span><img src="images/bell-regular-24.png"></span><h3>Notification</h3>
            </a>

            <a class="menu-item">
                <span><img src="images/user-regular-24.png"></span><h3>Friends</h3>
            </a>

            <a class="menu-item">
                <span><img src="images/envelope-regular-24.png"></span><h3>Message</h3>
            </a>

            <a class="menu-item active">
                <span><img src="images/cog-regular-24.png"></span><h3>Settings</h3>
            </a>
        </div>
        <div class="public-post-btn">
            <button class="btn white-btn" id="publicBtn" onclick="login()">Logout</button>
        </div>
    </div>

    <div class="posts">
        <CreatePost/>
        @if (Loading)
        {
            <div>Loading...</div>
        }
        else
        {
            @foreach (var post in _posts)
            {
                <PostOverview Post="post"/>
            }
        }
    </div>
</div>